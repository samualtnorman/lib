{
	"name": "@samual/lib",
	"version": "0.8.1",
	"main": "index.js",
	"private": true,
	"scripts": {
		"lint": "eslint .; tsc; tsc --project src",
		"build": "rollup --config",
		"dev": "pnpm build --watch",
		"emit-declarations": "tsc --project src --declaration --emitDeclarationOnly --noEmit false --outDir dist",
		"package": "rm -rf dist && pnpm build && pnpm emit-declarations && scripts/build-package-json.js && cp LICENSE README.md dist",
		"update": "pnpm update --latest !@types/node && pnpm update @types/node"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/samualtnorman/lib.git"
	},
	"author": "Samual Norman",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/samualtnorman/lib/issues"
	},
	"homepage": "https://github.com/samualtnorman/lib#readme",
	"engines": {
		"node": ">=18"
	},
	"types": "index.d.ts",
	"type": "module",
	"exports": {
		"./*": "./*.js",
		"./*.js": "./*.js"
	},
	"files": [
		"*"
	],
	"devDependencies": {
		"@babel/preset-env": "^7.23.2",
		"@babel/preset-typescript": "^7.23.2",
		"@rollup/plugin-babel": "^6.0.4",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-terser": "^0.4.4",
		"@samual/eslint-config": "^0.0.1",
		"@samual/lib": "^0.8.1",
		"@types/node": "^20.8.10",
		"babel-plugin-here": "^0.0.1",
		"eslint": "^8.52.0",
		"magic-string": "^0.30.5",
		"rollup": "^4.2.0",
		"semver": "^7.5.4",
		"typescript": "^5.2.2"
	},
	"optionalDependencies": {
		"valibot": "^0.20.1"
	}
}
